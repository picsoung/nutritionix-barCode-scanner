<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android" id="com.mirasense.scanditsdk.plugin" version="1.1.0">
  <name>ScanditBarcodeScanner</name>
  <!-- ios -->
  <platform name="ios">
    <plugins-plist key="ScanditSDK" string="ScanditSDK"/>
    <!-- feature tag in config.xml -->
    <config-file target="config.xml" parent="/widget">
      <feature name="ScanditSDK">
        <param name="ios-package" value="ScanditSDK"/>
      </feature>
    </config-file>
    <!-- Cordova >= 2.3 -->
    <!-- deprecated plugins tag in config.xml -->
    <!-- <config-file target="config.xml" parent="/*/plugins">
            <plugin name="ScanditSDK" value="ScanditSDK"/>
        </config-file> -->
    <!-- Resources for Scandit SDK -->
    <resource-file src="src/ios/scanditsdk-community-ios_3.1.1/ScanditSDK/beep.wav"/>
    <resource-file src="src/ios/scanditsdk-community-ios_3.1.1/ScanditSDK/empty.cpp"/>
    <resource-file src="src/ios/scanditsdk-community-ios_3.1.1/ScanditSDK/poweredby.png"/>
    <resource-file src="src/ios/scanditsdk-community-ios_3.1.1/ScanditSDK/poweredby@2x.png"/>
    <resource-file src="src/ios/scanditsdk-community-ios_3.1.1/ScanditSDK/flashlight-turn-off-icon.png"/>
    <resource-file src="src/ios/scanditsdk-community-ios_3.1.1/ScanditSDK/flashlight-turn-off-icon@2x.png"/>
    <resource-file src="src/ios/scanditsdk-community-ios_3.1.1/ScanditSDK/flashlight-turn-on-icon.png"/>
    <resource-file src="src/ios/scanditsdk-community-ios_3.1.1/ScanditSDK/flashlight-turn-on-icon@2x.png"/>
    <resource-file src="src/ios/scanditsdk-community-ios_3.1.1/ScanditSDK/flashlight-turn-off-icon-pressed.png"/>
    <resource-file src="src/ios/scanditsdk-community-ios_3.1.1/ScanditSDK/flashlight-turn-off-icon-pressed@2x.png"/>
    <resource-file src="src/ios/scanditsdk-community-ios_3.1.1/ScanditSDK/flashlight-turn-on-icon-pressed.png"/>
    <resource-file src="src/ios/scanditsdk-community-ios_3.1.1/ScanditSDK/flashlight-turn-on-icon-pressed@2x.png"/>
    <resource-file src="src/ios/scanditsdk-community-ios_3.1.1/ScanditSDK/camera-swap-icon-pressed.png"/>
    <resource-file src="src/ios/scanditsdk-community-ios_3.1.1/ScanditSDK/camera-swap-icon-pressed@2x.png"/>
    <resource-file src="src/ios/scanditsdk-community-ios_3.1.1/ScanditSDK/camera-swap-icon.png"/>
    <resource-file src="src/ios/scanditsdk-community-ios_3.1.1/ScanditSDK/camera-swap-icon@2x.png"/>
    <!-- Header files of Scandit SDK -->
    <header-file src="src/ios/scanditsdk-community-ios_3.1.1/ScanditSDK/ScanditSDKBarcodePicker.h" target-dir="ScanditSDK"/>
    <header-file src="src/ios/scanditsdk-community-ios_3.1.1/ScanditSDK/ScanditSDKOverlayController.h" target-dir="ScanditSDK"/>
    <source-file src="src/ios/scanditsdk-community-ios_3.1.1/ScanditSDK/libscanditsdk-iphone-3.1.1.a" framework="true" target-dir="ScanditSDK" compiler-flags="-fno-objc-arc"/>
    <!-- Scandit SDK Cordova Plugin Source for iOS -->
    <header-file src="src/ios/ScanditSDK.h"/>
    <source-file src="src/ios/ScanditSDK.mm"/>
    <header-file src="src/ios/ScanditSDKRotatingBarcodePicker.h"/>
    <source-file src="src/ios/ScanditSDKRotatingBarcodePicker.m"/>
    <!-- Frameworks needed by Scandit SDK for iOS -->
    <framework src="AudioToolbox.framework"/>
    <framework src="AVFoundation.framework"/>
    <framework src="CoreGraphics.framework"/>
    <framework src="CoreLocation.framework"/>
    <framework src="CoreMedia.framework"/>
    <framework src="CoreVideo.framework"/>
    <framework src="QuartzCore.framework"/>
    <framework src="SystemConfiguration.framework"/>
    <framework src="libiconv.dylib"/>
    <framework src="libz.dylib"/>
    <framework src="libc++.dylib"/>
  </platform>
</plugin>
